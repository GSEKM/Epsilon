	 * @generated
	 */
	public boolean canExecute() {
		if (false == getElementToEdit() instanceof Sensor) {
			return false;
		}
		if (reorientDirection == ReorientRelationshipRequest.REORIENT_SOURCE) {
			return canReorientSource();
		}
		if (reorientDirection == ReorientRelationshipRequest.REORIENT_TARGET) {
			return canReorientTarget();
		}
		return false;
	}

	/**
	 * @generated
	 */
	protected boolean canReorientSource() {
		if (!(oldEnd instanceof Sensor && newEnd instanceof Sensor)) {
			return false;
		}
		if (getLink().getSensor().size() != 1) {
			return false;
		}
		Sensor target = (Sensor) getLink().getSensor().get(0);
		if (!(getLink().eContainer() instanceof Init)) {
