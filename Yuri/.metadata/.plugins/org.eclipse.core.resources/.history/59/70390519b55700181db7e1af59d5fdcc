	 * @generated
	 */
	protected boolean canReorientTarget() {
		if (!(oldEnd instanceof Sensor && newEnd instanceof Sensor)) {
			return false;
		}
		if (getLink().getSensor().size() != 1) {
			return false;
		}
		Sensor source = (Sensor) getLink().getSensor().get(0);
		if (!(getLink().eContainer() instanceof Init)) {
			return false;
		}
		Init container = (Init) getLink().eContainer();
		return IotGmfBaseItemSemanticEditPolicy.getLinkConstraints()
